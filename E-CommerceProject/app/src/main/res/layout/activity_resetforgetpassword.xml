<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgrd"
    tools:context="com.example.nabil.e_commerceproject.resetforgetpassword">
    <EditText
        android:id="@+id/etEmailagain"
        android:fontFamily="casual"
        android:hint=" Email "
        android:textColorHint="#7f7f7f"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="105dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/etEmailagain"
        android:id="@+id/etuncleagain"
        android:fontFamily="casual"
        android:hint=" uncle name "
        android:textColorHint="#7f7f7f"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@id/etuncleagain"
        android:id="@+id/newpassagain"
        android:fontFamily="casual"
        android:hint=" new password "
        android:inputType="textPassword"
        android:textColorHint="#7f7f7f"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/btinagain"
        android:textSize="25dp"
        android:background="@android:color/darker_gray"
        android:text="reset password"
        android:layout_below="@id/newpassagain"
        android:textColor="#ffffff"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
